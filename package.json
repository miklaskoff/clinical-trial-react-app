{
  "name": "clinical-trial-questionnaire",
  "version": "4.0.0",
  "description": "Clinical trial eligibility questionnaire with hybrid AI + rule-based matching",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:backend": "cd server && npm start",
    "chat": "node scripts/export-chat.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:backend\" --names \"frontend,backend\" --prefix-colors \"cyan,magenta\"",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run",
    "test:contracts": "vitest run src/__tests__/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:install": "playwright install chromium",
    "cache:clear": "cd server && node -e \"const Database = require('better-sqlite3'); const db = new Database('./data/clinical-trials.db'); try { const r = db.prepare('DELETE FROM followup_cache').run(); console.log('Cleared', r.changes, 'cached entries'); } catch(e) { console.log('Cache table not found or error:', e.message); } db.close();\"",
    "verify": "powershell -ExecutionPolicy Bypass -File scripts/verify-implementation.ps1",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css}\"",
    "prepare": "husky"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.11",
    "msw": "^2.7.0",
    "prettier": "^3.4.2",
    "vite": "^6.0.6",
    "vitest": "^2.1.8",
    "concurrently": "^9.1.2"
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
